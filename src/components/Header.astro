---
import '../assets/home.css';

interface Props {
  fixed?: boolean;
  includeStyles?: boolean;
  currentPage?: string;
}

const { fixed = false, includeStyles = true } = Astro.props;
const headerClass = `site-header${fixed ? ' fixed' : ''}`;
const clockClass = `clock-container${fixed ? ' fixed' : ''}`;
---

<header class={headerClass}>
  <button id="menu-toggle" class="menu-toggle" aria-label="Toggle menu">
    <img src="/fav-icon-08.jpg" alt="Menu" class="menu-icon">
  </button>
  <nav class="header-nav">
    <a href="/" class="nav-link">Home</a>
    <a href="/archivio/" class="nav-link">Archivio</a>
    <a href="/editor/" class="nav-link">Editor</a>
    <a href="/public-work/" class="nav-link">Galleria</a>
  </nav>
</header>

<section class="clock-section">
  <div class={clockClass}>
    <span id="live-clock">01/12/2025 00:00:00</span>
  </div>
</section>
