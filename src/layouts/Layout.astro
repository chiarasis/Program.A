
---
interface Props {
	page?: string;
}

const { page = '' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/jpeg" href="/fav-icon-08.jpg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://fonts.cdnfonts.com/css/basier-square-mono" />
		<title> Program.A </title>
	</head>
	<body data-page={page}>
			<slot />
			<script src="/js/clock.js" is:inline></script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: #000;
		color: #000;
		font-family: 'Basier Square Mono', monospace;
		font-weight: 700;
	}
</style>




