import HeaderFixed from '../components/HeaderFixed.astro';

<Layout>
  <HeaderFixed currentPage="archivio" />

  <main class="archivio-page">
    <!-- Left side: Rolodex 3D scroll -->
    <div class="rolodex-container">
      <div class="rolodex-viewport">
        <div id="rolodex" class="rolodex">
          {opere.map((opera, index) => (
            <div class="card" data-index={index} data-id={opera.id}>
              <div class="card-inner">
                <img src={opera.image} alt={opera.title} />
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Right side: Details -->
    <div class="details-container">
      <div class="details-content" id="detailsContent">
        {opere.map((opera, index) => (
          <div class="opera-details" data-index={index}>
            <div class="opera-header">
              <span class="opera-group">{opera.group}</span>
              <span class="opera-year">{opera.year}</span>
            </div>
            <h2 class="opera-title">{opera.title}</h2>
            <p class="opera-artist">{opera.artist}</p>
            
            {opera.technique && (
              <div class="opera-info">
                <p class="opera-technique"><strong>Tecnica:</strong> {opera.technique}</p>
              </div>
            )}
            
            {opera.location && (
              <div class="opera-location">
                <p><strong>Ubicazione:</strong> {opera.location}</p>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="scroll-indicator">
      <span>Scorri per ruotare</span>
      <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
        <path d="M10 5V15M10 15L6 11M10 15L14 11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  </main>

  <script src="/js/archivioScroll.js" defer></script>
</Layout>

<style>
  .archivio-page {
    position: relative;
    background: #000;
    color: #fff;
    font-family: 'Basier Square Mono', monospace;
    font-weight: 700;
    min-height: 800vh;
    overflow-x: hidden;
    padding-top: 50px;
  }

  .rolodex-container {
    position: fixed;
    left: 0;
    top: 50px;
    width: 50%;
    height: calc(100vh - 50px);
    display: flex;
    align-items: center;
    justify-content: center;
    perspective: 2000px;
    z-index: 10;
  }

  .rolodex-viewport {
    width: 100%;
    height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .rolodex {
    position: relative;
    width: 400px;
    height: 500px;
    transform-style: preserve-3d;
    transition: transform 0.1s ease-out;
  }

  .card {
    position: absolute;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    transform-origin: center center;
  }

  .card-inner {
    width: 100%;
    height: 100%;
    background: #1a1a1a;
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 4px;
    overflow: hidden;
    box-shadow: 
      0 10px 40px rgba(0, 0, 0, 0.6),
      0 2px 8px rgba(0, 0, 0, 0.4);
  }

  .card-inner img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .details-container {
    position: fixed;
    right: 0;
    top: 50px;
    width: 50%;
    height: calc(100vh - 50px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 80px 60px;
    z-index: 5;
  }

  .details-content {
    max-width: 500px;
    width: 100%;
  }

  .opera-details {
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease;
    position: absolute;
    width: 100%;
  }

  .opera-details.active {
    opacity: 1;
    pointer-events: auto;
    position: relative;
  }

  .opera-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
    font-size: 13px;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: #888;
  }

  .opera-group {
    color: #fff;
    opacity: 0.6;
  }

  .opera-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 16px;
    letter-spacing: -0.02em;
    font-family: 'Basier Square Mono', monospace;
    color: #fff;
  }

  .opera-artist {
    font-size: 1.2rem;
    color: #ccc;
    margin-bottom: 40px;
    font-weight: 700;
    font-family: 'Basier Square Mono', monospace;
  }

  .opera-info,
  .opera-location {
    margin-bottom: 24px;
    color: #999;
    line-height: 1.6;
    font-size: 14px;
    font-weight: 400;
    font-family: 'Basier Square Mono', monospace;
  }

  .opera-info p,
  .opera-location p {
    margin: 0;
  }

  .scroll-indicator {
    position: fixed;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.4);
    font-size: 12px;
    letter-spacing: 1px;
    text-transform: uppercase;
    z-index: 20;
    animation: bounce 2s ease-in-out infinite;
    font-weight: 700;
    font-family: 'Basier Square Mono', monospace;
  }

  @keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(-10px); }
  }

  @media (max-width: 1024px) {
    .rolodex-container,
    .details-container {
      width: 100%;
      position: relative;
    }

    .rolodex-container {
      height: 70vh;
    }

    .details-container {
      height: auto;
      padding: 60px 40px 120px;
    }

    .opera-details {
      position: relative !important;
      opacity: 1 !important;
      pointer-events: auto !important;
      margin-bottom: 80px;
    }

    .archivio-page {
      min-height: auto;
    }
  }
</style>
