---
import Layout from '../layouts/Layout.astro';
import HeaderFixed from '../components/HeaderFixed.astro';
import Footer from '../components/Footer.astro';

const editors = [
  { title: 'Trame visuali', description: 'Strutture a griglia generative con moduli e parametri programmabili', url: '/editor-griglie', style: 'Strutture Programmata / Gruppo N' },
  { title: 'Cinetismi luminosi', description: 'Composizioni luminose e gradienti dinamici generativi', url: '/editor-luce', style: 'Light / Op-Art' },
  { title: 'Spazi magnetici', description: 'Bande cinetiche rotanti con twist, wobble e noise flow', url: '/editor-crashclock', style: 'Kinetic Type / Ispirazione STG' },
  { title: 'Strutture discretizzate', description: 'Effetto pixelazione su immagini e video con controllo granularit√† e colore', url: '/editor-pixel', style: 'Pixel Art / Glitch' },
  { title: 'Dinamiche ottiche', description: 'Pattern di rombi e forme geometriche articolate con rotazioni programmabili', url: '/editor-rombi', style: 'Forme Geometriche / Gruppo N' },
];
---

<head>
	<meta charset="UTF-8">
	<link rel="stylesheet" href="/src/assets/base.css">
</head>

    <Layout>
      <HeaderFixed />
  
      <main class="editors-hub">
        <section class="content-section">
          <div class="content-wrapper">
            <div class="intro-block">
              <p class="subtitle">Crea opere generative ispirate all'arte programmata italiana degli anni '60</p>
            </div>

            <div class="editors-grid">
              {editors.map((editor, index) => (
                <div class={`editor-row ${index % 2 === 0 ? 'align-left' : 'align-right'}`}>
                  <article class={`content-block editor-block block-${index + 1}`}>
                    <div class="floating-squares"></div>
                    <a href={editor.url} class="editor-link">
                      <div class="text-content">
                        <span class="card-style">{editor.style}</span>
                        <h2>{editor.title}</h2>
                        <p>{editor.description}</p>
                        <div class="card-arrow">
                          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </div>
                      </div>
                    </a>
                  </article>
                </div>
              ))}
            </div>
          </div>
        </section>
      </main>

      <Footer includeStyles={false} />

      <script src="/js/floatingSquares.js" is:inline></script>
      <script>
        // Scroll animations
        const observerOptions = {
          threshold: 0.1,
          rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
            }
          });
        }, observerOptions);

        document.querySelectorAll('.editor-block').forEach(block => {
          observer.observe(block);
        });
      </script>
    </Layout>

    <style>
      .editors-hub {
        min-height: 100vh;
        background: #000;
        color: #fff;
      }

      /* Content section */
      .content-section {
        position: relative;
        background: #000;
        padding: 140px 0 120px;
      }

      .content-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 40px;
        display: flex;
        flex-direction: column;
        gap: 60px;
      }

      .intro-block {
        text-align: center;
        max-width: 700px;
        margin: 0 auto;
      }

      .subtitle {
        font-size: 1.1rem;
        color: #b5b5b5;
        font-weight: 300;
        line-height: 1.6;
        font-family: var(--display-font);
      }

      .editors-grid {
        display: flex;
        flex-direction: column;
        gap: 60px;
      }

      .editor-row {
        display: flex;
        width: 100%;
      }

      .editor-row.align-left {
        justify-content: flex-start;
      }

      .editor-row.align-right {
        justify-content: flex-end;
      }

      /* Editor blocks styled like home content blocks */
      .content-block {
        position: relative;
        padding: 60px;
        min-height: 280px;
        max-width: 600px;
        width: 100%;
        display: flex;
        align-items: center;
        opacity: 0;
        transform: translateY(60px);
        transition: opacity 1.4s ease, transform 1.4s ease;
      }

      .content-block.visible {
        opacity: 1;
        transform: translateY(0);
      }

      .editor-link {
        display: block;
        text-decoration: none;
        color: #fff;
        width: 100%;
        transition: transform 0.3s ease;
      }

      .editor-link:hover {
        transform: translateY(-4px);
      }

      .text-content {
        position: relative;
        z-index: 2;
      }

      .card-style {
        display: inline-block;
        font-size: 12px;
        letter-spacing: 2px;
        text-transform: uppercase;
        color: #000;
        margin-bottom: 16px;
        font-family: var(--display-font);
      }

      .content-block h2 {
        font-size: clamp(1.8rem, 3.5vw, 2.8rem);
        font-weight: 400;
        margin-bottom: 16px;
        line-height: 1.2;
        font-family: var(--display-font);
        color: #000;
      }

      .content-block p {
        color: #000;
        line-height: 1.75;
        margin-bottom: 24px;
        font-size: 1.1rem;
        font-family: var(--display-font);
      }

      .card-arrow {
        display: flex;
        align-items: center;
        color: #000;
        opacity: 0.6;
        transition: all 0.3s ease;
      }

      .editor-link:hover .card-arrow {
        opacity: 1;
        transform: translateX(8px);
      }

      /* Floating squares background (from home) */
      .floating-squares {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
      }

      @media (max-width: 768px) {
        .content-section {
          padding: 120px 0 100px;
        }

        .content-wrapper {
          padding: 0 24px;
          gap: 40px;
        }

        .editors-grid {
          gap: 40px;
        }

        .editor-row.align-left,
        .editor-row.align-right {
          justify-content: center;
        }

        .content-block {
          padding: 40px 28px;
          min-height: 240px;
          max-width: 100%;
        }
      }
    </style>
